<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/BaseLayout" android:gravity="center">
	<FrameLayout android:id="@+id/frameLayout1"
		android:layout_width="match_parent" android:layout_height="match_parent">
		<ImageView android:scaleType="center" android:src="@drawable/metrobg"
			android:id="@+id/imageView1" android:layout_width="match_parent"
			android:layout_height="match_parent"></ImageView>
		<FrameLayout android:id="@+id/frameLayout2"  android:layout_margin="20dip"
			android:layout_width="match_parent" android:layout_height="match_parent">
			<RelativeLayout android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/BaseRelativeLayout">
				<TextView android:id="@+id/UsernameTV"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginTop="100dip" android:text="@string/username"></TextView>
				<EditText android:text="EditText" android:layout_width="match_parent"
					android:layout_height="wrap_content" android:layout_marginTop="125dip"
					android:id="@+id/UsernameTB"></EditText>
				<TextView android:id="@+id/PasswordTV"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginTop="180dip" android:text="@string/password"></TextView>
				<EditText android:text="EditText" android:layout_width="match_parent"
					android:layout_height="wrap_content" android:layout_marginTop="205dip"
					android:id="@+id/PasswordTB"></EditText>
				<CheckBox android:text="@string/autologin" android:id="@+id/RememberPasswordCB"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginTop="245dip"></CheckBox>
				<RelativeLayout android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/relativeLayout1">
					<TableLayout android:layout_width="match_parent"
						android:layout_height="wrap_content" android:id="@+id/tableLayout1">
						<TableRow android:layout_width="match_parent"
							android:layout_height="wrap_content" android:gravity="center_horizontal"
							android:id="@+id/tableRow1">
							<Button android:layout_marginTop="295dip"
								android:layout_width="80dip" android:layout_height="wrap_content"
								android:id="@+id/LoginB" android:text="@string/login"></Button>
							<Button android:layout_marginTop="295dip"
								android:layout_width="80dip" android:layout_height="wrap_content"
								android:id="@+id/RegisterB" android:text="@string/register"></Button>
							<Button android:layout_marginTop="295dip"
								android:layout_width="80dip" android:layout_height="wrap_content"
								android:id="@+id/SkipB" android:text="@string/skip"></Button>
						</TableRow>
					</TableLayout>
				</RelativeLayout>
			</RelativeLayout>
		</FrameLayout>
	</FrameLayout>
</LinearLayout>
